<div ng-controller="Me" ng-init="getUser()">
    <h1 style="color: white">Welcome {{user}}</h1>
    <hr />
    <button class="btn btn-primary" type="button" ng-click="showLogin()">Click Here to add an Album - </button>
    <input type="text" ng-model="albumName" ng-show="showAlbum"/>
    <button class="btn" type="submit" ng-click="makeAlbum()" ng-show="showAlbum">Create!</button>
    <p style="color: red">{{error}}</p>
    <hr />
    <h1>Upload a Photo to an Album</h1>
    <hr />
    <div style="padding: 10px; background-color: rgba(226, 160, 193, .3)">
        <input id="fileUpload" type="file" ng-model="photo" style=" cursor: pointer; margin-bottom: 10px; border-radius: 20px; background-color: rgba(90, 55, 97, .4)"/>
        <br />
        <span>Caption: &nbsp;<input type="text" ng-model="description" /></span>
        <br />
        <label style="margin-top: 10px;">Enter Your Tags here! No Spaces Please<textarea style="display: block !important; padding: 10px; width: 250px; margin: 10px 0;" ng-model="tags"></textarea></label>
        <br />
        <span>Select an  Album: &nbsp;<select ng-options="album for album in albums" ng-model="albumChoice"></select></span>
        <br />
        <button style="margin-top: 20px;" class="btn btn-primary" type="submit" ng-click="sendPhoto()">Upload Photo to this Album</button>
        <p style="color: red;">{{photoSendingError}}</p>
        <p>OR...</p>
        <span>Delete an Album: &nbsp;<select ng-model="toDelete" ng-options="album for album in albums"></select></span><button style="margin-left: 20px" class="btn btn-danger" ng-click="deleteAlbum()">Delete</button>
        <p style="color: red">{{deleteError}}</p>
    </div>
    <div style="border-bottom: 2px solid darkblue; padding: 5px;"></div>
    <div style="padding: 10px;" ng-repeat="album in albumNames.names">
        <h1 style="color: darkblue; padding-right: 20px; margin-bottom: 10px; ">{{album}}</h1>
        <a style="font-size: .8rem;" href="#" ng-click="showPhotos(album)">Display Photos</a>
        <!---In here we want to have an option to delete a photo using ng-options-->
        <div style="margin-top: 10px; border: 1px solid black; background-color: lightblue;" id={{album}} ng-init="init(album)" ng-repeat="photo in AIDs" ng-show="albumID == album">
            <span style="padding-left: 20px">ID: {{photo.name}}<img style="width: 250px; padding: 10px;" src="http://localhost:8888/api/albumPhoto/getPhotos/{{photo.name}}" /></span><br />
            <h4 style="padding-left:70px;">Caption:{{photo.caption}}</h4>
            
        </div>
        <div style="margin-top: 10px; padding: 5px; border: 1px solid gray; background-color:lightcyan;" ng-show="albumID == album">
            <span>Delete a photo?: <select id="deleteChoice" style="padding-right:30px;" ng-options="pic.name for pic in AIDs" ng-model="pic" ng-change="update(pic.name)" ></select><button style="margin-left: 20px;" class="btn btn-danger" ng-click="deletePhoto()">Delete?</button></span>
            <p style="color: red;">{{deletionError}}</p>
        </div>
        <hr />
    </div>







</div>